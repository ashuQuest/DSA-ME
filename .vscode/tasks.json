{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "compile and run",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        ".\\${fileBasenameNoExtension}.exe < input.txt > output.txt"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "dependsOn": "compile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
